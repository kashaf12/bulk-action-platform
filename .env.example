# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bulk_action_platform
DB_USER=postgres
DB_PASSWORD=password123
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis
REDIS_DATABASE=0
REDIS_CONNECT_TIMEOUT=2000

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=storage
MINIO_REGION=us-east-1

# File Processing
MAX_FILE_SIZE_MB=1000
MAX_CSV_ROWS=10000
TEMP_DIR=./temp

# Workers
INGESTION_WORKERS=1
CHUNKING_WORKERS=3
DEFAULT_BATCH_SIZE=1000
MAX_CONCURRENT_JOBS=10

PARTITION_ID=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10000

# Security
ALLOWED_ORIGINS=http://localhost:3000
MAX_REQUEST_SIZE=50mb
TRUST_PROXY=false

# Monitoring
LOKI_HOST=
METRICS_ENABLED=true

# Package Version
PACKAGE_VERSION=1.0.0

# Chunking Worker Configuration
AUTO_RESTART_WORKERS=true
MAX_RESTART_ATTEMPTS=3
HEALTH_CHECK_PORT=8001

# Chunking Workers
CHUNKING_WORKER_COUNT=3
MAX_MEMORY_PER_WORKER=256
TOTAL_MEMORY_LIMIT=1024

# Processing Workers  
PROCESSING_WORKER_COUNT=5
CONCURRENCY_PER_WORKER=3
BATCH_SIZE=1000
JOB_TIMEOUT=300000

CHUNKING_REPLICAS=2
PROCESSING_REPLICAS=3